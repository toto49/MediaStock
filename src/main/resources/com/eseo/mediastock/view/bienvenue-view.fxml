<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.eseo.mediastock.controller.BienvenueController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #323232, #2b2b2b);">

    <VBox alignment="CENTER"
          spacing="20"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <Label fx:id="labelconnexion"
               style="-fx-text-fill: #ffcc00; -fx-font-size: 18px; -fx-font-weight: bold;">
            Veuillez vous authentifier ou créer un compte
        </Label>

        <Button text="Connexion"
                onAction="#Buttonconnexion"
                style="-fx-background-color: #ffcc00; -fx-text-fill: #2b2b2b; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-cursor: hand; -fx-padding: 10 30;"/>

        <Button text="Créer un compte"
                onAction="#ButtonCreateAccount"
                style="-fx-background-color: transparent; -fx-text-fill: #ffcc00; -fx-border-color: #ffcc00; -fx-border-radius: 20px; -fx-border-width: 2px; -fx-cursor: hand; -fx-padding: 8 28;"/>

    </VBox>

    <Label AnchorPane.bottomAnchor="10"
           AnchorPane.rightAnchor="10"
           style="-fx-text-fill: derive(#2b2b2b, 50%); -fx-font-size: 10px;">
        Version : 0
    </Label>

</AnchorPane>