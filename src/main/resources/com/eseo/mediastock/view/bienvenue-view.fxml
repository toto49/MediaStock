<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.eseo.mediastock.controller.BienvenueController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom, #323232, #2b2b2b);">

    <VBox alignment="CENTER"
          spacing="20"
          fillWidth="false"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <Label fx:id="labelconnexion"
               wrapText="true"
               textAlignment="CENTER"
               style="-fx-text-fill: #ffcc00; -fx-font-size: 25px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;">
            Veuillez vous authentifier ou créer un compte
        </Label>

        <Button text="Connexion"
                onAction="#Buttonconnexion"
                prefWidth="250"
                prefHeight="40"
                style="-fx-background-color: #ffcc00; -fx-text-fill: #2b2b2b; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20px; -fx-cursor: hand;"/>

        <Button text="Créer un compte"
                onAction="#ButtonCreateAccount"
                prefWidth="250"
                prefHeight="40"
                style="-fx-background-color: transparent; -fx-text-fill: #ffcc00; -fx-border-color: #ffcc00; -fx-border-radius: 20px; -fx-border-width: 2px; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;"/>

    </VBox>

    <Label AnchorPane.bottomAnchor="15"
           AnchorPane.rightAnchor="15"
           style="-fx-text-fill: derive(#2b2b2b, 50%); -fx-font-size: 12px;">
        Version : 1.0
    </Label>

</AnchorPane>