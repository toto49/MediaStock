<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.eseo.mediastock.controller.CreateAccountController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #323232, #2b2b2b);">

    <VBox alignment="CENTER" spacing="15" fillWidth="false"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <Label text="Entrez vos informations"
               style="-fx-text-fill: #ffcc00; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        <HBox spacing="5">
            <VBox spacing="5">
                <Label style="-fx-text-fill: #ffcc00; -fx-font-size: 13px; -fx-font-weight: bold;" text="Nom"/>
                <TextField fx:id="field_nom_co" prefWidth="150"/>

            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #ffcc00; -fx-font-size: 13px; -fx-font-weight: bold;" text="PrÃ©nom"/>
                <TextField fx:id="field_prenom_co" prefWidth="150"/>
            </VBox>
        </HBox>
        <HBox spacing="5">
            <VBox spacing="5">
                <Label style="-fx-text-fill: #ffcc00; -fx-font-size: 13px; -fx-font-weight: bold;" text="Email"/>
                <TextField fx:id="field_email_co" prefWidth="150"/>
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #ffcc00; -fx-font-size: 13px; -fx-font-weight: bold;" text="Adresse"/>
                <TextField fx:id="field_adresse_co" prefWidth="150"/>
            </VBox>
        </HBox>
        <HBox spacing="5">
            <VBox spacing="5">
                <Label style="-fx-text-fill: #ffcc00; -fx-font-size: 13px; -fx-font-weight: bold;" text="Mot de passe"/>
                <PasswordField fx:id="field_password_co" prefWidth="150"/>
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #ffcc00; -fx-font-size: 13px; -fx-font-weight: bold;"
                       text="Confirmer "/>
                <PasswordField fx:id="field_copassword_co" prefWidth="150"/>
            </VBox>
        </HBox>

        <Button text="enregistrer" onAction="#Buttonsend"
                style="-fx-background-color: #ffcc00; -fx-text-fill: #2b2b2b; -fx-font-weight: bold; -fx-background-radius: 20px; -fx-cursor: hand; -fx-padding: 10 30;"/>
        <Button text="Retour" onAction="#Buttonreturnco"
                style="-fx-background-color: transparent; -fx-text-fill: #ffcc00; -fx-border-color: #ffcc00; -fx-border-radius: 20px; -fx-border-width: 2px; -fx-cursor: hand; -fx-padding: 8 28;"/>
        <Label style="--body-text-color: red" fx:id="error_label"/>
    </VBox>

    <Label AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" text="Version : 0"/>
</AnchorPane>